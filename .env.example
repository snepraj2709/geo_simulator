# ===========================================
# LLM Brand Influence Monitor Configuration
# ===========================================
# Copy this file to .env and fill in the values

# -------------------------------------------
# Application Settings
# -------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change-me-to-a-secure-random-string
APP_NAME="LLM Brand Monitor"

# -------------------------------------------
# API Settings
# -------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/llm_brand_monitor
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# -------------------------------------------
# Redis
# -------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# -------------------------------------------
# Neo4j (Graph Database)
# -------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# -------------------------------------------
# Elasticsearch / OpenSearch
# -------------------------------------------
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USER=admin
ELASTICSEARCH_PASSWORD=admin

# -------------------------------------------
# S3 / MinIO (Object Storage)
# -------------------------------------------
S3_BUCKET=llm-brand-monitor
S3_REGION=us-east-1
# For local MinIO development:
S3_ENDPOINT_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# -------------------------------------------
# LLM API Keys
# -------------------------------------------
# OpenAI (ChatGPT)
OPENAI_API_KEY=sk-your-openai-api-key

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Perplexity
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# -------------------------------------------
# Celery (Task Queue)
# -------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
JWT_SECRET_KEY=jwt-secret-change-me-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -------------------------------------------
# Rate Limiting
# -------------------------------------------
RATE_LIMIT_AUTH=10
RATE_LIMIT_READ=100
RATE_LIMIT_WRITE=30
RATE_LIMIT_SIMULATION=5
HARD_SCRAPE_COOLDOWN_DAYS=7

# -------------------------------------------
# Feature Flags
# -------------------------------------------
FEATURE_PERPLEXITY_ENABLED=true
FEATURE_NEW_CLASSIFIER=false

# -------------------------------------------
# Monitoring
# -------------------------------------------
# Sentry (error tracking)
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
