# API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Application Configuration
VITE_APP_NAME=LLM Brand Influence Monitor
VITE_APP_VERSION=0.1.0

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=false

# LLM Providers (for display purposes)
VITE_SUPPORTED_LLM_PROVIDERS=openai,google,anthropic,perplexity

# Pagination Defaults
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Scraping Configuration
VITE_DEFAULT_SCRAPE_DEPTH=3
VITE_MAX_SCRAPE_DEPTH=5

# Simulation Configuration
VITE_DEFAULT_SIMULATION_PROVIDERS=openai,google,anthropic

# Cache Configuration (in milliseconds)
VITE_CACHE_STALE_TIME=300000
VITE_CACHE_GC_TIME=600000

# Development
VITE_DEV_PORT=5173
VITE_BACKEND_PORT=8000
